<div class="row">
	<div class="columns">
	<h1>學習履歷</h1>
		<div class="course_list">
		<% @course.each do |c|%>
		<div class="columns">
			<h4><%= link_to c.name, '/courses/'+c.id.to_s %></h4>
			<div class="large-4 columns"><%=c.course_date%></div>
			<div class="large-4 columns"><%=c.location%></div>
			<div class="large-4 columns">
				<%=link_to '退報名', '/courses/cancel_attendence/'+c.id.to_s%>
			</div>
		</div>
		<% end %>
		</div>
	</div>
</div>
