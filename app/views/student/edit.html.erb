<h1>Student#edit</h1>
<p>Find me in app/views/student/edit.html.erb</p>
<%= form_for(@student,:url =>'/student/update', :html => { :method => :put }) do |f| %>
  <div><%=current_user.username%></div>
  <div><%= f.label :description %><br />
  <%= f.text_area :description, :autofocus => true %></div>


  <div><%= f.submit "Update" %></div>
<% end %>

<%= link_to 'Back',:back %>
