<div class="large-3 column">
	<div class="user_table">
	  <div class="user_avatar">
	  	<div class="user_avatar_wrapper">
	  	<%= image_tag @student.avatar.url(:medium), :class=>:th, :id=>:uploadPreview %>
	  	<%if @student_editable%>
	  		<i class="fa fa-gear edit_avatar">更換圖片</i>
	  	</div>
	  		<%=form_for @student, :url=>student_path(@student) do |f|%>
	  			<div class="row">
		  			<div class="large-6 column" style="display:none">
		  				<div id="uploadBtn">
		  					<%= f.file_field :avatar, :class=>"test" %>
		  				</div>
		  			</div>
		  			
		  			<div style="display:none" id="confirm_upload">
	  					<%= f.submit "確定",  :class=>"test button tiny"%>
		  				<%= link_to :取消, student_path('me'), :class=>"button secondary tiny"%>
		  			</div>
	  			</div>
	  		<% end %>
	  		<%else%>
	  		</div>
	  	<% end %>
	  </div>
	  <div class="user_name"><h3><%=@student.username%></h3></div>
	</div>
</div>