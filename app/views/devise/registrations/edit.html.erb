  <h2>帳號設定</h2>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
    <dl class="tabs" data-tab>
      <dd class="active"><a href="#account_setting">帳號設定</a></dd>
      <dd><a href="#password_setting">密碼設定</a></dd>
    </dl>

    <div class="tabs-content">
      <div id="account_setting" class="content active">
        <div class="large-2 columns"><%= f.label :email, :class=>'inline right' %></div>
        <div class="large-10 columns"><%= f.email_field :email, :autofocus => true, :placeholder=>'您的登入Email' %></div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        
        <div class="large-2 columns"><%= f.label :姓名, :class=>'inline right' %></div>
        <div class="large-10 columns"><%= f.text_field :username, :autofocus => true, :placeholder=>'請輸入真實姓名' %></div>
        
        <div class="large-2 columns"><%= f.label :聯絡電話,:class=>'inline right' %></div>
        <div class="large-10 columns"><%= f.text_field :phone, :autofocus => true %></div>
        <%= f.submit "設定", :class=>'button right' %>
        <%= link_to "返回個人資料", :back, :class=>'button right', :style=>"margin-right:20px;" %>
      <% end %>
      </div>

      <div id="password_setting" class="content">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
          <div class="large-2 columns"><%= f.label :新密碼,:class=>'inline right' %></div>
          <div class="large-10 columns"><%= f.password_field :password, :autocomplete => "off", :placeholder=>'若不更改請留空白' %></div>

          <div class="large-2 columns"><%= f.label :確認新密碼,:class=>'inline right' %></div>
          <div class="large-10 columns"><%= f.password_field :password_confirmation, :placeholder=>'請再次輸入變新密碼' %></div>
          <div class="large-2 columns"><%= f.label '目前密碼', :class=>'inline right' %></div>
          <div class="large-10 columns"><%= f.password_field :current_password, :placeholder=>'輸入目前密碼以完成設定' %></div>
          <div class="large-2 columns">
            <label class="inline right"><h4>刪除帳號</h4></label>
          </div>
          <div class="large-10 columns">
            <%= link_to "刪除帳號", registration_path(resource_name),:class=>'button alert', :data => { :confirm => "確定刪除帳號?" }, :method => :delete %>
          </div>
          <%= f.submit "設定", :class=>'button right' %>
        <%= link_to "返回個人資料", :back, :class=>'button right', :style=>"margin-right:20px;" %>
        <% end %>
      </div>
    </div>
      