<div class="large-3 column">
	<div class="user_table">
	  <div class="user_avatar">
	  	<%= image_tag @student.avatar.url(:medium), :class=>:th %>
	  	<%= form_for(resource, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
	  		<%= f.file_field :avatar %>
	  		<%= f.submit%>
	  	<% end -%>
	  </div>
	  <div class="user_name"><h3><%=@student.username%></h3></div>
	  <div class="description">An awesome description</div>
	</div>
	<br/>
</div>
<div class="large-9 column">
	<dl class="tabs" data-tab>
	  <dd class="active"><a href="#panel2-1"><h5>關於我</h5></a></dd>
