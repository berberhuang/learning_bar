<%=render 'layouts/student_user_panel'%>
<div class="large-9 column">
<dl class="tabs" data-tab>
  <dd><a href="#profile"><h6>關於我</h6></a></dd>
  <dd><a href="#show_skill"><h6>開發技能</h6></a></dd>
  <dd><a href="#course_history"><h6>我的課程</h6></a></dd>

</dl>
<div class="tabs-content">
  <div class="content active columns" id="profile">
	<%if @student_editable%>
  	<div class="right">
  		<%=link_to '編輯',edit_info_student_path('me'),:class=>"button"  %>
  	</div>
		<% end %>
		<h3>自我介紹</h3>
		<p><%=@student.description%></p>
		<h3>個人經歷</h3>
		<p><%=@student.resume%></p>
	</div>
	<div class="content columns" id="show_skill">
	<%if @student_editable%>
	  	<div class="right">
        <%=link_to "編輯", edit_skills_student_path('me'), :class=>"button"%>
	  	</div>
	<%end -%>
		<h3>專長</h3>
  	<ul class="skill_board">
		<%@skills.each do |s|%>
      <li class="skill_item">
  			<div class="large-3 column">
  				<h3><%=s.skill.skill_name%></h3>
  			</div>
  			<div class="large-9 column">
  				<p><%=s.skill_description%></p>
  			</div>
  			<hr/>
      </li>
  		<% end -%>
	</div>
	
  <div class="content columns" id="course_history">
    <h3>參與課程</h3>
    <ul>
    <%@courses.each do |course|%>
      <li>
        <%=link_to course.name, course_path(course)%>
      </li>
    <% end -%>
    </ul>
  </div>
</div>
