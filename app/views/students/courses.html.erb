<div class="row">
	<div class="columns">
		<div class="course_list">
		<% @courses.each do |c|%>
		<div class="columns">
			<h4><%= link_to c.name, '/courses/'+c.id.to_s %></h4>
			<div class="large-4 columns"><%=c.course_date%></div>
			<div class="large-4 columns"><%=c.location%></div>
			<div class="large-4 columns">
				<%=link_to '退報名', cancel_attendance_course_path(c)%>
			</div>
		</div>
		<% end %>
		</div>
	</div>
</div>
